<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:contentDescription="@string/splash_screen_description"
        android:src="@drawable/mainmenu3"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/mstartbutton"
        android:background="@drawable/menustart"
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="65dp"/>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/mlocationsbutton"
        android:background="@drawable/menulocations"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mstartbutton"
        android:layout_alignStart="@+id/mstartbutton" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/mhelpbutton"
        android:background="@drawable/menuhelp"
        android:layout_alignTop="@+id/mlocationsbutton"
        android:layout_alignRight="@+id/mstartbutton"
        android:layout_alignEnd="@+id/mstartbutton" />


</RelativeLayout>

