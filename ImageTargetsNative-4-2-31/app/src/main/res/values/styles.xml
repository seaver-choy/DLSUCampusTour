<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SampleAppsTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/Theme.MyAppTheme.ActionBar</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#009f3c</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="AboutDialog">
        <item name="android:windowTitleStyle">@style/dialogtitle</item>
        <item name="android:textColor">#1A8200</item>
        <item name="android:background">#ffffff</item>

    </style>

    <style name="dialogtitle">
        <item name="android:textColor">#1A8200</item>
    </style>

    <style name="layout_alert"  parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:textColor">#006F04</item>
        <item name="android:textColorPrimary">#00A405</item>
        <item name="android:borderlessButtonStyle">@style/Widget.Sphinx.Button.Borderless</item>
        <item name="android:background">@null</item>
    </style>


    <style name="Widget.Sphinx.Button.Borderless" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textColor">#00DC07</item>

    </style>
</resources>